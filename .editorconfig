# Ultra Spectra C++ Style
root = true

# All
[*]
charset = utf-8-bom
indent_style = space

# C++
[*.{c++,cc,cpp,cxx,h,h++,hh,hpp,hxx,inl,ipp,tlh,tli}]
ident_size = 4
tab_width = 4

end_of_line = crlf
insert_final_newline = true

vc_generate_documentation_comments = doxygen_triple_slash

# C# files
[*.cs]
indent_size = 4
tab_width = 4

end_of_line = crlf
insert_final_newline = true
